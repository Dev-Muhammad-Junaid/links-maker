{
  "manifest_version": 3,
  "name": "Links Maker â€” Quick Profile Switcher",
  "version": "0.3.0",
  "description": "Quickly switch between Google account profiles via omnibox, context menu, or an in-page switcher.",
  "omnibox": { "keyword": "switch" },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "scripting",
    "downloads",
    "webNavigation"
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": { "service_worker": "background.js", "type": "module" },
  "options_page": "options.html",
  "action": {
    "default_title": "Links Maker"
  },
  "commands": {
    "toggle_widget": {
      "suggested_key": { "default": "Alt+L", "mac": "Alt+L" },
      "description": "Toggle Links Maker in-page widget"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.cloud.google.com/*",
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.snapchat.com/*",
        "*://*.tiktok.com/*",
        "*://*.linkedin.com/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["Checkmark.png", "Cross.png", "Warning.png"],
      "matches": ["*://*/*"]
    }
  ]
}
